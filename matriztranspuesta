#include <iostream>


using namespace std;

int main() {
 int matriz1[3][3], matriz2[3][3], matrizsuma[3][3];

 cout<<"primera matriz"<<endl;
 for (int i = 0; i < 3; i++) {
  for (int j = 0; j < 3; j++) {
   cout << "Digite un numero para [" << i << "][" << j << "]: ";
   cin >> matriz1[i][j];
  }
 }

 cout<<"segunda mtriz matriz"<<endl;
 for (int i = 0; i < 3; i++) {
  for (int j = 0; j < 3; j++) {
   cout << "Digite un numero para [" << i << "][" << j << "]: ";
   cin >> matriz2[i][j];
  }
 }


 cout << "Primera Matriz"<<endl;
 for (int i = 0; i < 3; i++) {
  for (int j = 0; j < 3; j++) {
   cout << matriz1[i][j] << " ";
  }
  cout << endl;
 }


 
 cout << "Segunda Matriz"<<endl;
 for (int i = 0; i < 3; i++) {
  for (int j = 0; j < 3; j++) {
   cout << matriz2[i][j] << " ";
  }
  cout <<endl;
 }

 cout << "Matriz Suma"<<endl;
 for (int i = 0; i < 3; i++) {
  for (int j = 0; j < 3; j++) {
   matrizsuma[i][j] = matriz1[i][j] + matriz2[i][j];
   cout << matrizsuma[i][j] << " ";
  }
  cout << endl;
 }

 
 return 0;
}
